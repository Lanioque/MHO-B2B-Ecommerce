# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/ecommerce_dev"

# Redis (Upstash)
REDIS_URL="https://your-redis-instance.upstash.io"
REDIS_REST_TOKEN="your-redis-token"

# NextAuth
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET="your-nextauth-secret-here-change-in-production"

# Telr Payment Gateway
TELR_MODE=test
TELR_STORE_ID="your-telr-store-id"
TELR_AUTH_KEY="your-telr-auth-key"
TELR_ENDPOINT=https://secure.telr.com/gateway/remote.xml

TELR_RETURN_SUCCESS=http://localhost:3000/checkout/success
TELR_RETURN_DECLINE=http://localhost:3000/checkout/decline
TELR_RETURN_CANCEL=http://localhost:3000/checkout/cancel

# Zoho Integration
ZOHO_CLIENT_ID="your-zoho-client-id"
ZOHO_CLIENT_SECRET="your-zoho-client-secret"
ZOHO_REDIRECT_URI=http://localhost:3000/api/zoho/oauth/callback
ZOHO_REGION=eu
ZOHO_SCOPE=ZohoInventory.items.READ,ZohoBooks.contacts.CREATE,ZohoBooks.contacts.READ,ZohoBooks.salesorders.CREATE,ZohoBooks.invoices.CREATE,ZohoBooks.invoices.READ,ZohoBooks.estimates.CREATE,ZohoBooks.estimates.READ

# Service Account Credentials (if using service account instead of OAuth)
ZOHO_ACCESS_TOKEN="your-access-token-here"
ZOHO_REFRESH_TOKEN="your-refresh-token-here"
ZOHO_ORGANIZATION_ID="your-zoho-organization-id"
ZOHO_BOOKS_ORGANIZATION_ID="your-zoho-books-organization-id"


# Cron Jobs
CRON_SECRET="your-cron-secret-here-change-in-production"

# Sentry
SENTRY_DSN="your-sentry-dsn"

# Logging
LOG_LEVEL=info

# GitHub Integration (for issue reporting)
GITHUB_TOKEN=your-github-personal-access-token
GITHUB_REPO_OWNER=your-github-username
GITHUB_REPO_NAME=your-repo-name
GITHUB_REPO_BRANCH=main

